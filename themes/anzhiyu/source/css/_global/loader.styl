//- loader.styl
.loading-container
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: #1a1a1a
  display: flex
  justify-content: center
  align-items: center
  z-index: 9999
  &.loaded
    opacity: 0
    pointer-events: none

.loading-container.loaded {
  opacity: 0;
  pointer-events: none;
}

.loader {
  font-size: 3em;
  font-weight: 900;
}

/* 初始颜色和脉冲动画 */
.loader > * {
  color: #6f42c1;
  animation: colorPulse 1s ease infinite;
}

/* 加载完成后的文字样式 */
.loading-container.loaded .loader > * {
  animation: none;
  color: #6f42c1;
}

.loader span {
  display: inline-flex;
}

/* 初始加载时的动画 */
.loader span:nth-child(2) {
  letter-spacing: -1em;
  overflow: hidden;
  animation: 
    reveal 3000ms cubic-bezier(0.645, 0.045, 0.355, 1) 1 forwards;
    colorPulse 1s ease infinite;
}

/* 加载完成后的动画调整 */
.loading-container.loaded .loader span:nth-child(2) {
  animation: 
    reveal 1.5s cubic-bezier(0.645, 0.045, 0.355, 1) 1 forwards;
}

@keyframes colorPulse {
  0%, 100% {
    color: #6f42c1;
    filter: brightness(1);
  }
  50% {
    color: #9b72e6;
    filter: brightness(1.2);
  }
}

@keyframes reveal {
  0% {
    opacity: 0.5;
    letter-spacing: -1em;
  }
  100% {
    opacity: 1;
    letter-spacing: 0;
  }
}